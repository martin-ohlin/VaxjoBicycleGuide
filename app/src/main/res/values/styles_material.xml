<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="actionBarTabStyle">@style/ActionBarTabStyle.MyMaterialTheme</item>

        <item name="colorPrimary">@color/cyan_500</item>
        <item name="colorPrimaryDark">@color/cyan_600</item>
        <item name="colorAccent">@color/pink_500</item>
    </style>

    <style name="AppTheme.Overlay">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.WithoutActionBarShadow">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="ActionBarTabStyle.MyMaterialTheme" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_vaxjobikeguide</item>
    </style>

</resources>